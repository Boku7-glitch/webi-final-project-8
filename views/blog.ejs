<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>The Blog | <%= blog.title %></title>
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/blog.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Sen:wght@400..800&display=swap"
          rel="stylesheet">
    <link rel="shortcut icon" href="./images/blog-icon.svg" type="image/x-icon">
</head>
<body>
<%- include('partials/header', {email: email}); %>

<div class="container blog-wrapper">
    <div class="recent-blogs">
        <h2 class="recent-blogs-title">Recent blog posts</h2>

        <div class="recent-blogs-content">
            <% blogs.splice(0, 6).forEach((blog, index)=>{ %>
                <div class="">
                    <a href="/blogs/<%= blog.id %>">
                        <figure>
                            <img class="main-img" src="/images/thumbnails/normal/<%= index %>.png" alt="thumbnail">
                        </figure>
                    </a>
                    <div class="formated-date">
                        <p class=""><%= blog.author %> ‚Ä¢ <%= blog.formatedDate %></p>
                    </div>
                    <a class="recent-blog-title-wrapper" href="/blogs/<%= blog.id %>">
                        <h3 class=""><%= blog.title.slice(0, 20) %> </h3>

                        <img src="/images/arrow-up-right-light.svg" alt="arrow-up-right-light">
                    </a>
                    <p class="description"><%= blog.description.slice(0, 90) %> </p>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="blog-content">
        <p class="blog-date"><%= blog.formatedDate %></p>

        <h2 class="blog-title"><%= blog.title %></h2>

        <p class="blog-text"><%= blog.content %></p>
    </div>
</div>

<div class="comments-section">
    <h3>üí¨ Comments</h3>

    <form class="comment-form" action="/blogs/<%= blog.id %>/comments" method="POST">
        <textarea name="text" placeholder="Write a comment..." required></textarea>
        <button type="submit">Post</button>
    </form>

    <div class="comments-list">
        <% (blog.comments || []).reverse().forEach(comment => { %>
            <div class="comment-card">
                <p class="comment-meta"><%= comment.author %> ‚Ä¢ <%= comment.formatedDate %></p>
                <p class="comment-text"><%= comment.text %></p>
                <div class="comment-actions">
                    <button class="like-btn" data-comment-id="{{comment._id}}">‚ù§Ô∏è <%= comment.likes || 0 %></button>
                    <button class="reply-btn" data-comment-id="{{comment._id}}">‚Ü© Reply</button>
                </div>

                <% if (comment.replies && comment.replies.length > 0) { %>
                    <div class="replies">
                        <% comment.replies.forEach(reply => { %>
                            <div class="reply">
                                <p><%= reply.author %> ‚Ä¢ <%= reply.date %></p>
                                <p><%= reply.text %></p>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer') %>

<script>
    document.querySelectorAll('.like-btn').forEach(button => {
        button.addEventListener('click', async () => {
            const commentId = button.dataset.commentId;
            const res = await fetch(`/comments/${commentId}/like`, { method: 'POST' });
            const data = await res.json();
            button.nextElementSibling.textContent = `${data.likes} Likes`;
        });
    });

    document.querySelectorAll('.reply-btn').forEach(button => {
        button.addEventListener('click', () => {
            const commentId = button.dataset.commentId;
            const replyInput = prompt("Enter your reply:");
            if (replyInput) {
                fetch(`/comments/${commentId}/reply`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ text: replyInput, author: 'Anonymous' })
                }).then(() => location.reload());
            }
        });
    });
</script>

</body>
</html>